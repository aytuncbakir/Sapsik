<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan_tasarim"
    tools:context="com.sivamalabrothers.sapsik.Splash">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout">


        <Button
            android:id="@+id/nasil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:textColor="#ffffff"
            android:background="@drawable/buton_selektor"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text=" ? " />

        <TextView
            android:id="@+id/aralikGoster"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:background="@drawable/textview_tasarim"
            android:textIsSelectable="true"
            android:textColor="#ffffff"
            android:text="Başlamak için sayı tut."/>

        <Button
            android:id="@+id/sayiTut"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:textColor="#ffffff"
            android:background="@drawable/buton_selektor"
            android:text="Sayı Tut" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.3"
            android:background="@drawable/sapsiklogo" />


            <EditText
                android:id="@+id/tahminText"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/text_tasarim"
                android:inputType="number"
                android:hint="Tahmin Gir"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff" />
        <Button

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.3"
            android:background="@drawable/sapsiklogo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/reset"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:textColor="#ffffff"
            android:background="@drawable/buton_selektor"
            android:text="Reset" />

            <Button
                android:id="@+id/tamam"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:textColor="#ffffff"
                android:background="@drawable/buton_selektor"
                android:text="Tamam" />
    </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/reklam_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/reklam_layout1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/reklam_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:orientation="vertical" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/linearLayout"
        android:alpha="0.3"
        android:background="@drawable/sapsiklogo" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout"
        android:alpha="0.3"
        android:background="@drawable/sapsiklogo" />

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.3"
        android:background="@drawable/sapsiklogo" />


</RelativeLayout>
